<Window x:Class="ShowMeTheMoney.Shell"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:ShowMeTheMoney.Views"
        Title="Show Me The Money" Height="600" Width="800"
				Icon="images/icn.png"
				>
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="20"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>
		<Menu Width="Auto" Background="Transparent" >
			<MenuItem Header="Plik">
				<MenuItem Header="Otwórz" x:Name="openFile" />
			</MenuItem>
		</Menu>
		<Separator Margin="2,-1,2,0" Height="2" Background="LightGray"  Grid.Row="1"/>
		<views:EncouragementView Grid.Row="2"/>
	</Grid>
</Window>
