<UserControl x:Class="RUISample.Routing.RoutingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:reactiveUi="clr-namespace:ReactiveUI;assembly=ReactiveUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition />
			</Grid.RowDefinitions>
		<StackPanel Orientation="Horizontal">
			<Button x:Name="navigateRed">Red</Button>
			<Button x:Name="navigateBlue">Blue</Button>
		</StackPanel>
    <reactiveUi:RoutedViewHost x:Name="RoutedViewHost" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Row="1">
            
    </reactiveUi:RoutedViewHost>
	</Grid>
</UserControl>
